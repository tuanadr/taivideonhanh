# Production Environment Configuration
NODE_ENV=production

# Domain Configuration
DOMAIN=taivideonhanh.com
ACME_EMAIL=admin@taivideonhanh.com

# Database Configuration
DB_HOST=postgres
DB_USER=taivideonhanh_user
DB_PASSWORD=your_secure_db_password_here
DB_NAME=taivideonhanh_prod

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@taivideonhanh.com
DEFAULT_ADMIN_PASSWORD=TaiVideo2024!Admin
ADMIN_JWT_EXPIRES_IN=8h

# Cookie Configuration (Multi-Platform Support)
COOKIES_PATH=/tmp/cookies/platform-cookies.txt
YOUTUBE_COOKIES_PATH=/tmp/cookies/youtube-cookies.txt
ENABLE_COOKIE_AUTH=true

# YouTube Cookie Authentication (Production)
YOUTUBE_COOKIES_PATH=/tmp/cookies/youtube-cookies.txt
CHROME_USER_DATA_DIR=/opt/chrome-profile
ENABLE_COOKIE_AUTH=true
SKIP_COOKIE_AUTH=false

# YouTube Download Optimization
YOUTUBE_MAX_RETRIES=3
YOUTUBE_RETRY_DELAY=2000
YOUTUBE_MIN_REQUEST_INTERVAL=2000
YOUTUBE_USER_AGENT_ROTATION=true

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# API Configuration (Domain taivideonhanh.vn)
NEXT_PUBLIC_API_URL=https://taivideonhanh.vn/api

# Streaming Configuration
STREAM_TOKEN_EXPIRES_MINUTES=30
MAX_CONCURRENT_STREAMS=3
MAX_TOKENS_PER_USER=5
MAX_TOKENS_PER_HOUR=20
STREAM_BUFFER_SIZE=65536

# Performance Monitoring
METRICS_RETENTION_HOURS=24
PERFORMANCE_MONITORING_ENABLED=true

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=https://taivideonhanh.vn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/app/uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@taivideonhanh.com
SMTP_PASSWORD=your_email_password_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
