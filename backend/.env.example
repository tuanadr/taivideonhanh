# Database Configuration
DB_HOST=localhost
DB_USER=user
DB_PASSWORD=pass
DB_NAME=db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
ROTATE_REFRESH_TOKENS=true

# Admin Configuration
ADMIN_EMAILS=admin@taivideonhanh.vn
DEFAULT_ADMIN_EMAIL=admin@taivideonhanh.vn
DEFAULT_ADMIN_PASSWORD=admin123456

# Server Configuration
PORT=5000
NODE_ENV=development

# Rate Limiting
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=info

# Streaming Configuration
STREAM_TOKEN_EXPIRES_MINUTES=30
MAX_CONCURRENT_STREAMS=3
MAX_TOKENS_PER_USER=5
MAX_TOKENS_PER_HOUR=20
STREAM_BUFFER_SIZE=65536

# Performance Monitoring
METRICS_RETENTION_HOURS=24
PERFORMANCE_MONITORING_ENABLED=true

# Multi-Platform Cookie Authentication
COOKIES_PATH=/tmp/cookies/platform-cookies.txt
YOUTUBE_COOKIES_PATH=/tmp/cookies/youtube-cookies.txt
CHROME_USER_DATA_DIR=/opt/chrome-profile
ENABLE_COOKIE_AUTH=true
SKIP_COOKIE_AUTH=false

# YouTube Download Optimization
YOUTUBE_MAX_RETRIES=3
YOUTUBE_RETRY_DELAY=2000
YOUTUBE_MIN_REQUEST_INTERVAL=2000
YOUTUBE_USER_AGENT_ROTATION=true
